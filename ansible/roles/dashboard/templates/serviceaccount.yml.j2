apiVersion: v1
kind: ServiceAccount
metadata:
  name: {{ dashboard_admin_name }}
  namespace: {{ dashboard_ns }}
---
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRoleBinding
metadata:
  name: {{ dashboard_admin_name }}
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: cluster-admin
subjects:
- kind: ServiceAccount
  name: {{ dashboard_admin_name }}
  namespace: {{ dashboard_ns }}
